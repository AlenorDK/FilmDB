<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowColor</item>
    </style>

    <style name="AppTheme" parent="BaseTheme"/>
    <style name="AppTheme.Account" parent="AppTheme"/>

    <style name="LoginTheme" parent="BaseTheme">
        <item name="android:textColorPrimary">@color/loginThemeTextColor</item>
        <item name="android:textColor">@color/loginThemeTextColor</item>
        <item name="android:textColorHint">@color/loginThemeLineColor</item>
        <item name="colorControlActivated">@color/loginThemeLineColor</item>
        <item name="colorControlNormal">@color/loginThemeLineColor</item>
    </style>
</resources>
