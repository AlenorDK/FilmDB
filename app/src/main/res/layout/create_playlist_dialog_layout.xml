<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/create_playlist_dialog_layout_playlist_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/create_playlist_dialog_layout_playlist_name_hint"
        android:ems="15" />

    <EditText
        android:id="@+id/create_playlist_dialog_layout_playlist_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/create_playlist_dialog_layout_playlist_description_hint"
        android:ems="15" />
</LinearLayout>